
module local 1.0;

require {
	type mysqld_db_t;
	type container_t;
	class dir { add_name create read remove_name rmdir setattr write };
	class file { append create getattr lock map open read rename setattr unlink write };
}

#============= container_t ==============
allow container_t mysqld_db_t:dir { add_name create read remove_name rmdir setattr write };

#!!!! This avc can be allowed using the boolean 'domain_can_mmap_files'
allow container_t mysqld_db_t:file map;
allow container_t mysqld_db_t:file { append create getattr lock open read rename setattr unlink write };
